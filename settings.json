{
  "editor.minimap.enabled": false, 
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.lineNumbers": "relative",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j","j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<C-j>"], "after": ["g", "T"] },
    { "before": ["<C-k>"], "after": ["g", "t"] },
    { "before": ["l"], "after": ["h"] },
    { "before": [";"], "after": ["l"] },
    {
      "before": ["<leader>","<leader>",";"],
      "after": ["<leader>","<leader>","l"]
    }, 
    {
      "before": ["<leader>","<leader>","l"],
      "after": ["<leader>","<leader>","h"]
    },
    {
      "before":["<C-n>"], 
      "commands": [ { "command": ":nohl" } ]
    },
    {
      "before": ["Z", "Z"],
      "commands": [ { "command": ":wq" } ]
    },
    {
      "before": ["<leader>", "s"],
      "commands": [ { "command": "workbench.action.files.save" } ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [ "p", ],
      "after": [ "p", "g", "v", "y" ]
    }, 
    {
      "before": [ ">" ],
      "commands": [ { "command": "editor.action.indentLines" } ]
    },
    {
      "before": [ "<" ],
      "commands": [ { "command": "editor.action.outdentLines" } ]
    },
  ],
  "vim.leader": "<space>",
  "vim.handleKeys":{
    "<C-a>": false,
    "<C-f>": false,
    "<C-h>": false,
    "<C-v>": false,
    "<C-c>": false,
    "<C-b>": false
  },
  "vim.statusBarColorControl": true,
  "vim.statusBarColors": {
      "normal": ["#8FBCBB", "#434C5E"],
      "insert": "#BF616A",
      "visual": "#B48EAD",
      "visualline": "#B48EAD",
      "visualblock": "#A3BE8C",
      "replace": "#D08770"
  },
  "workbench.colorCustomizations": {
    "statusBar.background": "#8FBCBB",
    "statusBar.noFolderBackground": "#8FBCBB",
    "statusBar.debuggingBackground": "#8FBCBB",
    "statusBar.foreground": "#434C5E"
  }
}
